<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.lms.app.controller.LoginController"
           style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    
    <VBox alignment="CENTER" spacing="28" maxWidth="420" styleClass="card">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40"/>
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="12">
            <Label text="ðŸ“š" style="-fx-font-size: 56px;"/>
            <Label text="Welcome Back!" styleClass="h1" 
                   style="-fx-text-fill: #1a1f36; -fx-font-size: 28px;"/>
            <Label text="Sign in to continue to your account" 
                   style="-fx-text-fill: #718096; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Input Section -->
        <VBox spacing="20" maxWidth="Infinity">
            <VBox spacing="8">
                <Label text="Username" 
                       style="-fx-text-fill: #4a5568; -fx-font-weight: 600; -fx-font-size: 13px;"/>
                <TextField fx:id="usernameField" 
                          promptText="Enter your username"
                          style="-fx-font-size: 15px; -fx-pref-height: 48px;"/>
            </VBox>
            
            <VBox spacing="8">
                <Label text="Password" 
                       style="-fx-text-fill: #4a5568; -fx-font-weight: 600; -fx-font-size: 13px;"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter your password"
                              style="-fx-font-size: 15px; -fx-pref-height: 48px;"/>
            </VBox>
        </VBox>

        <!-- Login Button -->
        <Button text="Sign In" 
                onAction="#handleLogin" 
                maxWidth="Infinity" 
                styleClass="button-primary"
                style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-pref-height: 52px;"/>

        <!-- Footer -->
        <Label text="Â© 2024 LMS - Learning Management System" 
               style="-fx-text-fill: #a0aec0; -fx-font-size: 12px;"/>
    </VBox>
</StackPane>
