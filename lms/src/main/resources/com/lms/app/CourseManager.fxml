<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lms.app.controller.CourseManagerController" spacing="10" styleClass="card">
    
    <Label text="Course Management" styleClass="h1"/>
    
    <TableView fx:id="courseTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="titleCol" text="Title" prefWidth="200"/>
            <TableColumn fx:id="descCol" text="Description" prefWidth="300"/>
        </columns>
    </TableView>
    
    <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="titleField" promptText="Course Title" prefWidth="200"/>
            <TextArea fx:id="descField" promptText="Description" prefRowCount="2" prefWidth="250"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Department"/>
                <ComboBox fx:id="departmentComboBox" prefWidth="180"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Academic Year"/>
                <ComboBox fx:id="academicYearComboBox" prefWidth="180"/>
            </VBox>
            
            <Button fx:id="imageBtn" text="Choose Cover Image" onAction="#chooseImage" styleClass="button"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Add Course" onAction="#addCourse" styleClass="button-success"/>
            <Button text="Delete Course" onAction="#deleteCourse" styleClass="button-danger"/>
        </HBox>
    </VBox>
    
    <Label text="Right-click course to Manage Modules" style="-fx-text-fill: grey;"/>
</VBox>
